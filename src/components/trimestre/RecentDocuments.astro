    opacity: 0.4;
    margin-bottom: 0.5rem;
  }

  .empty-docs p {
    margin: 0;
    font-size: var(--font-size-sm);
  }

  @media (max-width: 640px) {
    .recent-docs-container {
      padding: 1rem;
    }

    .docs-title {
      font-size: var(--font-size-lg);
    }
